<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <TextView
        android:id="@+id/vtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:text="Clique na foto para ver as informações"
        app:layout_constraintBottom_toTopOf="@+id/caoB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botão Cão -->
    <ImageButton
        android:id="@+id/caoB"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@android:color/transparent"
        android:src="@drawable/cao"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vtitulo" />

    <!-- Caixa Cão (texts agrupados) -->
    <LinearLayout
        android:id="@+id/caixaCao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFE0B2"
        android:padding="12dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/caoB"
        app:layout_constraintTop_toTopOf="@id/caoB"
        app:layout_constraintBottom_toBottomOf="@id/caoB"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/caov1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/caov2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/caov3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Botão Gato -->
    <ImageButton
        android:id="@+id/gatoB"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@android:color/transparent"
        android:src="@drawable/gato"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/caoB"
        android:layout_marginTop="16dp" />

    <!-- Caixa Gato -->
    <LinearLayout
        android:id="@+id/caixaGato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#B2DFDB"
        android:padding="12dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/gatoB"
        app:layout_constraintTop_toTopOf="@id/gatoB"
        app:layout_constraintBottom_toBottomOf="@id/gatoB"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/gatoV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gatoV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gatoV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Botão Rato -->
    <ImageButton
        android:id="@+id/ratoB"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@android:color/transparent"
        android:src="@drawable/rato"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gatoB"
        android:layout_marginTop="16dp" />

    <!-- Caixa Rato -->
    <LinearLayout
        android:id="@+id/caixaRato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#BBDEFB"
        android:padding="12dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/ratoB"
        app:layout_constraintTop_toTopOf="@id/ratoB"
        app:layout_constraintBottom_toBottomOf="@id/ratoB"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/ratoV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ratoV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ratoV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcule o seu IMC aqui"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
